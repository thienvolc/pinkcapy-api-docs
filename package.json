{
  "name": "pinkcapy-api-docs",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "redocly lint openapi.yaml",
    "alias-resolve": "python scripts/alias_resolver.py openapi.yaml openapi-resolved.yaml",
    "redocly-bundle": "redocly bundle openapi-resolved.yaml -o dist/openapi.json",
    "bundle": "bun run alias-resolve && bun run redocly-bundle",
    "preview": "redocly preview-docs openapi.yaml"
  },
  "private": true,
  "devDependencies": {
    "@redocly/cli": "^2.10.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
